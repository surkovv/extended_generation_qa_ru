{
  "dataset_reader": {
    "class_name": "sq_reader",
    "valid_size": 2000,
    "data_path": "{DOWNLOADS_PATH}/sbersquad_detailed.json"
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
  "chainer": {
    "in": ["question", "contexts"],
    "in_y": ["short_target", "target"],
    "pipe": [
      {
        "class_name": "torch_transformers_generative_qa_preprocessor",
        "vocab_file": "{TRANSFORMER}",
        "max_seq_length": 512,
        "answer_maxlength": 30,
        "in": ["question", "contexts", "target"],
        "out": ["input_ids", "attention_mask", "target_ids"]
      },
      {
        "class_name": "torch_generative_qa",
        "pretrained_transformer": "{TRANSFORMER}",
        "save_path": "{MODEL_PATH}/new_model",
        "load_path": "{MODEL_PATH}/new_model",
        "optimizer": "AdamW",
        "optimizer_parameters": {
          "lr": 3e-04,
          "weight_decay": 0.01,
          "betas": [0.9, 0.999],
          "eps": 1e-06
        },
        "learning_rate_drop_patience": 20,
        "learning_rate_drop_div": 1.5,
        "in": ["input_ids", "attention_mask"],
        "in_y": ["target_ids"],
        "out": ["answer", "ppl"]
      }
    ],
    "out": ["answer"]
  },
  "train": {
    "show_examples": false,
    "evaluation_targets": [
      "test"
    ],
    "log_every_n_batches": 200,
    "val_every_n_batches": 200,
    "batch_size": 6,
    "validation_patience": 100,
    "epochs": 2,
    "metric_optimization": "minimize",
    "metrics": [
      {
        "name": "ppl",
        "inputs": ["ppl"]
      },
      {
        "name": "squad_v1_f1",
        "inputs": ["target", "answer"]
      },
      {
        "name": "sacrebleu",
        "inputs": ["target", "answer"]
      },
      {
        "name": "rouge1_lemma",
        "inputs": ["short_target", "answer"]
      }
    ],
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "MAX_TOKENS" : 50,
      "LOWERCASE": false,
      "TRANSFORMER": "google/mt5-small",
      "TRANSFORMER1": "t5-base",
      "PROJECT_PATH": "/data/home/admin/qa",
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/generative_qa/{TRANSFORMER}-msmarco-dsberquad",
      "URL_PREFIX": "https://files.deeppavlov.ai/deeppavlov_data/extended_generative_qa"
    },
    "download": [
      {
        "url": "{URL_PREFIX}/sberquad/sbersquad_detailed.json",
        "subdir": "{DOWNLOADS_PATH}"
      },
      {
        "url": "{URL_PREFIX}/mT5-ms-marco+dsberquad-validated/new_model.pth.tar",
        "subdir": "{MODEL_PATH}"
      }
   ]
  }
}
