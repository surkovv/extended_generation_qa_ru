{
  "chainer": {
    "in": ["question", "contexts"],
    "pipe": [
      {
        "class_name": "torch_transformers_generative_qa_preprocessor",
        "vocab_file": "{TRANSFORMER}",
        "max_seq_length": 512,
        "answer_maxlength": 50,
        "in": ["question", "contexts"],
        "out": ["input_ids", "attention_mask", "target_ids"]
      },
      {
        "class_name": "torch_generative_qa",
        "pretrained_transformer": "{TRANSFORMER}",
        "save_path": "{MODEL_PATH}/{NAME}",
        "load_path": "{MODEL_PATH}/{NAME}",
        "optimizer": "AdamW",
        "optimizer_parameters": {
          "lr": 3e-04,
          "weight_decay": 0.01,
          "betas": [0.9, 0.999],
          "eps": 1e-06
        },
        "learning_rate_drop_patience": 20,
        "learning_rate_drop_div": 1.5,
        "in": ["input_ids", "attention_mask"],
        "out": ["answer"]
      }
    ],
    "out": ["answer"]
  },
  "metadata": {
    "variables": {
      "NAME": "ruT5-dsberquad-v2",
      "MAX_TOKENS" : 50,
      "LOWERCASE": false,
      "TRANSFORMER": "sberbank-ai/ruT5-base",
      "PROJECT_PATH": "/data/home/admin/qa",
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/generative_qa/{TRANSFORMER}-dsberquad",
      "URL_PREFIX": "https://files.deeppavlov.ai/deeppavlov_data/extended_generative_qa"
    },
    "download1": [
      {
        "url": "{URL_PREFIX}/ruT5-dsberquad-2-epochs/new_model.pth.tar",
        "subdir": "{MODEL_PATH}"
      }     
    ]
  }
}
